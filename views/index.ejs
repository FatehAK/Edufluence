<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="images/favicon.ico" />
    <title>Edufluence</title>
    <link href="https://fonts.googleapis.com/css?family=Raleway:700,400,300" rel="stylesheet" type="text/css">
    <link href="css/font-awesome.min.css" rel="stylesheet">
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/styles.css" rel="stylesheet">
    <script src="/socket.io/socket.io.js"></script>
    <script src="js/getscreenmedia.bundle.js"></script>
</head>

<body>
    <nav class="navbar navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <a href="/"> <img src="images/weblogo.png" width="45px" height="50px" /></a>
                <a href="/"> <img src="images/name.png" width="200px" height="50px" /></a>
            </div>
        </div>
    </nav>

    <div id="landingPage" class="mastHead landing-page">
        <div class="container">
            <div class="row">
                <div class="col-xs-8 col-xs-offset-2">
                    <div class="starter-text">
                        <h1 class="head-style"><strong>WebRTC</strong></h1>
                        <br />
                        <p class="subhead-style">Peer to Peer Learning</p>
                    </div>
                    <div class="starter-call-to-action">
                        <a href="" id="enterAsStudent" class="call-group call-style">Student</a>
                        <a href="" id="enterAsExpert" class="call-group call-style">Expert</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="studentEntry" class="mastHead" style="display: none;">
        <div class="signin-to-app">
            <h2>Welcome Student</h2>
            <div id="requestExpertForm">
                <p>Student Login</p>
                <form class="form-inline" onsubmit="return false">
                    <div class="form-group">
                        <input type="text" id="studentName" class="input-styled form-control" style="color: #000;" placeholder="Username" required autofocus>
                        <br /><br />
                        <input type="password" id="studentPass" class="input-styled form-control" style="color: #000;" placeholder="Password"
                            onkeydown="if (event.keyCode == 13)document.getElementById('requestExpert').click()" required autofocus>
                        <br /><br /><br />
                        <button id="requestExpert" class="input-styled">Request an Expert</button>
                        <br />
                        <button id="sRegister" class="input-styled">Register</button>
                    </div>
                </form>
            </div>

            <div id="waitingForExpert" class="loading-wrap" style="display: none;">
                <span>Waiting for the expert to arrive..</span>
                <div class="progress">
                    <div id="waitingForExpertProgress" class="progress-bar progress-bar-success progress-bar-striped active" style="width: 100%"></div>
                </div>
            </div>

            <div id="expertListing" class="expert-info" style="display: none;">
                <div class="doc-img">
                    <img src="images/expert.jpg">
                </div>
                <div class="doc-text">
                    <span class="name">The Expert will see you now</span>
                    <span class="specialty"></span>
                    <button id="callExpert" class="input-styled">Call the Expert</button>
                </div>
            </div>

            <div id="studentRegister">
                <p>Registration</p>
                <form class="form-inline" onsubmit="return false">
                    <div class="form-group">
                        <input type="text" id="usName" class="input-styled form-control" style="color: #000;" placeholder="Username" required autofocus>
                        <br /><br />
                        <input type="password" id="usPass" class="input-styled form-control" style="color: #000;" placeholder="Password" required autofocus>
                        <br /><br />
                        <input type="text" id="usSpl" class="input-styled form-control" style="color: #000;" placeholder="What are you looking for?"
                            onkeydown="if (event.keyCode == 13)document.getElementById('ssRegister').click()" required autofocus>
                        <br /><br /><br />
                        <button id="ssRegister" class="input-styled hov">Register</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div id="expertSignup" class="mastHead" style="display: none;">
        <div class="signin-to-app signin-expert">
            <h2>Welcome Expert</h2>
            <div id="expertSignupForm">
                <p>Expert Login</p>
                <form class="form-inline">
                    <div class="form-group" onsubmit="return false">
                        <input type="text" id="expertName" class="input-styled form-control" style="color: #000;" placeholder="Username" required autofocus>
                        <br /><br />
                        <input type="password" id="expertPass" class="input-styled form-control" style="color: #000;" placeholder="Password"
                            onkeydown="if (event.keyCode == 13)document.getElementById('expertSignupButton').click()" required autofocus>
                        <br /><br /><br />
                        <button id="expertSignupButton" class="input-styled">Wait for Student</button>
                        <br />
                        <button id="eRegister" class="input-styled">Register</button>
                    </div>
                </form>
            </div>

            <div id="waitingForStudent" class="loading-wrap" style="display: none;">
                <span>Waiting for students to contact you..</span>
                <div class="progress">
                    <div class="progress-bar progress-bar-success progress-bar-striped active" style="width: 100%"></div>
                </div>
            </div>

            <div id="expertRegister">
                <p>Registration</p>
                <form class="form-inline" onsubmit="return false">
                    <div class="form-group">
                        <input type="text" id="ueName" class="input-styled form-control" style="color: #000;" placeholder="Username" required autofocus>
                        <br /><br />
                        <input type="password" id="uePass" class="input-styled form-control" style="color: #000;" placeholder="Password" required autofocus>
                        <br /><br />
                        <input type="text" id="ueSpl" class="input-styled form-control" style="color: #000;" placeholder="Specialty"
                            onkeydown="if (event.keyCode == 13)document.getElementById('eeRegister').click()" required autofocus>
                        <br /><br /><br />
                        <button id="eeRegister" class="input-styled hov">Register</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div id="videoPage" class="mastHead" style="display: none;">
        <div class="video-page-holder video-page-holder-horizontal">
            <div class="left">
                <div class="video-wrap">
                    <div class="main-video">
                        <video id="mainVideoTag" autoplay></video>
                    </div>
                    <div class="small-video">
                        <video id="smallVideoTag" autoplay muted></video>
                    </div>
                </div>

                <div class="actions-holder">
                    <a id="muteMyself" class="input-styled" href="javascript:void(0)">Mute</a>
                    <a id="pauseMyVideo" class="input-styled" href="javascript:void(0)">Pause Video</a>
                    <a id="shareMyScreen" class="input-styled" href="javascript:void(0)">Share Screen</a><br />
                </div>

                <form class="send-file form-inline">
                    <div class="form-group" style="margin: 0 auto;">
                        <input type="file" id="sendFile" class="space-styled" />
                        <progress id="fileProgress" value="1" max="100" class="progress-styled"></progress>
                        <br />
                        <a id="receivedFileLink"></a>
                        <br />
                    </div>
                </form>

                <form class="send-message form-inline" onsubmit="return false">
                    <div class="form-group">
                        <input type="text" id="myMessage" class="input-styled form-control" placeholder="Enter your message"
                            onkeydown="if (event.keyCode == 13)document.getElementById('sendMessage').click()" autofocus>
                        <button id="sendMessage" class="input-styled">Send Message</button>
                    </div>
                </form>
            </div>

            <div class="right">
                <div id="messageHolder" class="message-holder">
                    <div id="messageInName" class="message-in"></div>
                    <div id="messageOutName" class="message-out"></div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/webrtc.js"></script>
    <script src="js/app.js"></script>
</body>

</html>
